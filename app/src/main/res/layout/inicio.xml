<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#10ac84"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/calculadora"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="40dp"
               android:gravity="center"
               android:layout_height="wrap_content">
               <FrameLayout
                   android:id="@+id/adicionarDespesa"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:background="@drawable/container"
                  >
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/despesa"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Adicionar Despesa"
                       android:gravity="center"
                       android:layout_marginTop="10dp"
                       android:textColor="#000"
                       android:fontFamily="serif"/>
               </FrameLayout>
               <FrameLayout
                   android:layout_toRightOf="@id/adicionarDespesa"
                   android:id="@+id/consultarDespesa"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:background="@drawable/container"
                   android:layout_marginLeft="30dp">
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/consultar"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Consultar Despesas"
                       android:gravity="center"
                       android:layout_marginTop="10dp"
                       android:textColor="#000"
                       android:fontFamily="serif"/>
               </FrameLayout>
               <FrameLayout
                   android:id="@+id/adicionarPagamento"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_marginTop="170dp"
                   android:background="@drawable/container"
                   >
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/pagamento"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Adicionar Pagamento"
                       android:gravity="center"
                       android:layout_marginTop="10dp"
                       android:textColor="#000"
                       android:fontFamily="serif"/>
               </FrameLayout>
               <FrameLayout
                   android:id="@+id/balncoMensal"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_marginTop="170dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginBottom="30dp"
                   android:layout_toRightOf="@id/adicionarPagamento"
                   android:background="@drawable/container"
                   >
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/balanco"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="BalanÃ§o Mensal"
                       android:gravity="center"
                       android:layout_marginTop="10dp"
                       android:textColor="#000"
                       android:fontFamily="serif"/>
               </FrameLayout>
           </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>